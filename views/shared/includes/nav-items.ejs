<ul class="nav-items">
    <!-- if you are not an admin or you didn't login or you logged in as a user you can see this navigation -->
    <% if (!locals.isAdmin) { %>
        <li><a href="/">Shop</a></li>
        <li><a href="/cart">Cart <span class="badge"><%= locals.cart.totalQuantity %></span></a></li>
    <% } %>    

    <!-- if you logged in as a normal user and you are not admin -->
    <% if (locals.isAuth && !locals.isAdmin) { %>
    <li><a href="/orders">Orders</a></li>
    <% } %>

    <!-- if  you are admin -->
    <% if (locals.isAdmin) { %>
        <li><a href="/admin/products">Manage Products</a></li>
        <li><a href="/admin/orders">Manage Orders</a></li>
    <% } %>    

    <!-- if you didn't logged in -->
    <% if (!locals.isAuth) { %>
        <li><a href="/signup">Signup</a></li>
        <li><a href="/login">Login</a></li>
    <% } %>

    <!-- if you are just a normal user ie. logged in or an admin -->
    <% if (locals.isAuth) { %>
        <li>
            <form action="/logout" method="POST">
                <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
                <button>Logout</button>
            </form>
        </li>
    <% } %>
</ul>